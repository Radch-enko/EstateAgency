<Page x:Class="EstateAgency.Screens.Login.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EstateAgency.Screens.Login"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Login"
      Background="White">

    <StackPanel VerticalAlignment="Center">
        <Label Content="Логин" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBox x:Name="LoginTextBox" Text="{Binding Login}" HorizontalAlignment="Center" VerticalAlignment="Center" Width="200" />
        <Label Content="Пароль" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBox x:Name="PasswordTextBox" Text="{Binding Password}" HorizontalAlignment="Center" VerticalAlignment="Center" Width="200" />

        <Button x:Name="LoginButton" Click="LoginButton_Click" Content="Войти" HorizontalAlignment="Center" VerticalAlignment="Center" Width="150" Height="30" Margin="0 20 0 0"/>
    </StackPanel>
</Page>
