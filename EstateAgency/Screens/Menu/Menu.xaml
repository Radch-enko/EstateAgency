<Page x:Class="EstateAgency.Screens.Menu.Menu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EstateAgency.Screens.Menu"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="Главное меню">

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <Button x:Name="AddNewClient" Content="Новый клиент" Click="AddNewClient_Click" Margin="0 20 0 0"/>
        <Button x:Name="AddNewRequirement" Content="Новое требование" Click="AddNewRequirement_Click" Margin="0 20 0 0"/>
        <Button x:Name="ShowRequirements" Content="Посмотреть требования к недвижимости" Click="ShowRequirements_Click" Margin="0 20 0 0"/>
        <Button x:Name="AddNewEstate" Content="Новая недвижимость" Click="AddNewEstate_Click"  Margin="0 20 0 0"/>
        <Button x:Name="SearchEstate" Content="Поиск недвижимости" Margin="0 20 0 0" Click="SearchEstate_Click"/>
        <Button x:Name="ShowReports" Content="Отчеты" Margin="0 20 0 0" Click="ShowReports_Click"/>
    </StackPanel>
</Page>
