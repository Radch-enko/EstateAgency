<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">


    <SolidColorBrush x:Key="Primary" Color="#36384f"/>
    <SolidColorBrush x:Key="Secondary" Color="#FFE96C73"/>
    <SolidColorBrush x:Key="Accent" Color="#916d87"/>
    <SolidColorBrush x:Key="AccentVariant" Color="#98c1af"/>

    <Style x:Key="DefaultWindow" TargetType="{x:Type Window}">
        <Setter Property="Background" Value="{StaticResource Primary}"/>
    </Style>
    <Style x:Key="DefaultPage" TargetType="{x:Type Page}">
        <Setter Property="Background" Value="{StaticResource Primary}"/>
    </Style>


</ResourceDictionary>